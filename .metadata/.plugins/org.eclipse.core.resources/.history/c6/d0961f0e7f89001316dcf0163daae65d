
/**
	   Allows shapes to be created
	 */
	import javax.swing.JComponent;
	import java.awt.Graphics;
	import java.awt.Graphics2D;
	import java.awt.geom.Ellipse2D;
	import java.awt.geom.Line2D;
	/**
	   Draws a face.
	 */
	public class MyFace extends JComponent
	{

	/** Eclipse told me to put this line here
		 * 
		 */
		private static final long serialVersionUID = 1L;

	 public MyFace() {
	
		
	    public void paintComponent(Graphics g)
	   {
	      Graphics2D g2 = (Graphics2D) g;
	      
	    //Draws the head
	      Ellipse2D.Double face = new Ellipse2D.Double(0, 0, 200, 200);
	      g2.draw(face);
	      
	    //Draws left eye
	      Ellipse2D.Double eyeleft = new Ellipse2D.Double(50, 50, 20, 20);
	      g2.draw(eyeleft);
	      
	    //Draws right eye
	      Ellipse2D.Double eyeright = new Ellipse2D.Double(125, 50, 20, 20);
	      g2.draw(eyeright);
	   
	    //Draws the mouth
	      Line2D.Double lip = new Line2D.Double(50, 125, 145, 125);
	      g2.draw(lip);
	   
	      public String toString(){
	    	  return face + eyeleft + eyeright + lip; }
	      
	      
	      }
	   }
}